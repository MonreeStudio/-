<Page
    x:Class="倒计时.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:倒计时"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlAcrylicWindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="SettingsTopText"
                   Text="设置"
                   FontSize="28"
                   Foreground="CornflowerBlue"
                   Margin="90,30,0,0"
                   Grid.Row="0"
                   Grid.Column="0" 
                   VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="20,30,0,0">
        <PersonPicture x:Name="MyPersonPicture"
                       Width="110"
                       Height="110"
                       ToolTipService.ToolTip="点击更换头像"
                       Grid.Row="0" Grid.RowSpan="5" Grid.Column="0"
                       HorizontalAlignment="Left"
                       ProfilePicture="Assets//老许2.jpg"
                       Tapped="MyPersonPicture_Tapped"
                       />
            <StackPanel Margin="20,16,0,0">
                <StackPanel Orientation="Horizontal">
                <TextBlock Text="昵称：" FontSize="13"/>
                    <TextBlock x:Name="PersonalNickName" x:FieldModifier="Public" Text="Bill夏昕" FontSize="13"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="性别：" FontSize="13"/>
                    <TextBlock x:Name="PersonalSex" x:FieldModifier="Public" Text="男" FontSize="13" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="生日：" FontSize="13"/>
                    <TextBlock x:Name="PersonalBirthday" x:FieldModifier="Public" Text="1999/7/8" FontSize="13"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="个性签名：" FontSize="13"/>
                    <TextBlock x:Name="PersonalSign" x:FieldModifier="Public" Text="只与同好赏风雅。" FontSize="13"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Button Content="编辑个人信息"
                Height="40"
                Grid.Row="1"
                Grid.Column="1"
                Foreground="White"
                Background="CornflowerBlue"
                BorderThickness="2"
                Style="{StaticResource ButtonRevealStyle}" Click="Button_Click"/>
        <ToggleSwitch AutomationProperties.Name="simple ToggleSwitch"
                      Header="主页背景开启亚克力效果"
                      Grid.Row="2"
                      Grid.Column="0"
                      Margin="20,10,0,0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      x:Name="AllPageAcylic"
                      x:FieldModifier="public"
                      IsOn="True"
                      OnContent="开"
                      OffContent="关"
                      Toggled="AllPageAcylic_Toggled"
                      />
        <TextBlock x:Name="TestTb"
                   Grid.Row="3"
                   Grid.Column="0"
                   
                   HorizontalAlignment="Center"/>
        <Button x:Name="AboutButton"
                Content="关于应用"
                Grid.Row="5"
                Grid.Column="1"
                Margin="0,0,0,0"
                Foreground="White"
                Background="CornflowerBlue"
                HorizontalAlignment="Left"
                CornerRadius="15"
                BorderThickness="2"
                BorderBrush="Azure"
                Height="50"
                Width="100"
                Click="AboutButton_Click"
                >
            <Button.Flyout>
                <Flyout>
                    <StackPanel>
                        <TextBlock Style="{ThemeResource BaseTextBlockStyle}">
                         emmmmmmmmmm.....................
                        </TextBlock>
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>

        <Frame x:Name="ContentFrame" x:FieldModifier="Public"/>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                        MinWindowWidth="{x:Bind MinMyNav}"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SettingsTopText.Margin" Value="20"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
