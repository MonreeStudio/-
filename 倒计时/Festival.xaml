                    <TextBlock x:Name="StartName7" x:FieldModifier="Public" RelativePanel.Below="Name7" Text="2019/5/1" FontSize="20" Foreground="White"/>
                </RelativePanel>
            </ListViewItem>
            <ListViewItem Margin="0,0,0,2" Background="Orange" Height="130">
                <RelativePanel>
                    <TextBlock x:Name="Name8" Text="儿童节" x:FieldModifier="Public" FontSize="20" Foreground="White"/>
                    <TextBlock x:Name="Date8" x:FieldModifier="Public" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" FontSize="25" Foreground="White"/>
