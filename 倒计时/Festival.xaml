                    <TextBlock x:Name="StartName2" x:FieldModifier="Public" Text="2017/10/7" HorizontalAlignment="Center" VerticalAlignment="Bottom"  FontSize="20" Margin="0,70,0,0" Foreground="White"/>
                </StackPanel>
            </GridViewItem>
            <GridViewItem >
                <StackPanel CornerRadius="10" Margin="0,0,0,0" Background="PowderBlue" Width="220" Height="250">
                    <TextBlock x:Name="Name3" Text="许嵩深圳歌友会" x:FieldModifier="Public" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Foreground="White"/>
                    <TextBlock  x:Name="Date3" x:FieldModifier="Public"  HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Center" FontSize="25" Foreground="White"/>
                    <TextBlock x:Name="StartName3" x:FieldModifier="Public"  Text="2019/5/11" HorizontalAlignment="Center" VerticalAlignment="Bottom"  FontSize="20" Margin="0,70,0,0" Foreground="White"/>
                </StackPanel>
            </GridViewItem>
            <GridViewItem >
                <StackPanel CornerRadius="10" Margin="0,0,0,0" Background="Moccasin" Width="220" Height="250">
