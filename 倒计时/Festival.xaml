            </ListViewItem>
            <ListViewItem Margin="0,0,0,2" Background="OrangeRed" Height="130">
                <RelativePanel>
                    <TextBlock x:Name="Name12" Text="国庆节" x:FieldModifier="Public" FontSize="20" Foreground="White"/>
