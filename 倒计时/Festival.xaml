                <StackPanel CornerRadius="10" Margin="0,0,0,0" Background="Pink" Width="220" Height="250">
                    <TextBlock x:Name="Name1" Text="Together" x:FieldModifier="Public" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Foreground="White"/>
                    <TextBlock x:Name="Date1" x:FieldModifier="Public" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Center" FontSize="25" Foreground="White"/>
                    <TextBlock x:Name="StartName1" x:FieldModifier="Public" Text="2018/12/24" HorizontalAlignment="Center" VerticalAlignment="Bottom"  FontSize="20" Margin="0,70,0,0" Foreground="White"/>
                </StackPanel>
            </GridViewItem>
            <GridViewItem >
                <StackPanel CornerRadius="10" Margin="0,0,0,0" Background="SkyBlue" Width="220" Height="250">
                    <TextBlock x:Name="Name2" Text="青年晚报演唱会广州站" x:FieldModifier="Public" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Foreground="White"/>
