            </ListViewItem>
            <ListViewItem Margin="0,0,0,2" Background="ForestGreen" Height="130">
                <RelativePanel>
                    <TextBlock x:Name="Name9" Text="端午节" x:FieldModifier="Public" FontSize="20" Foreground="White"/>
                    <TextBlock x:Name="Date9" x:FieldModifier="Public" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" FontSize="25" Foreground="White"/>
                    <TextBlock x:Name="StartName9" x:FieldModifier="Public" RelativePanel.Below="Name9" Text="2019/6/7" FontSize="20" Foreground="White"/>
