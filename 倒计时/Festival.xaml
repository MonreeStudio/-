                </StackPanel>
            </GridViewItem>
            <GridViewItem >
                <StackPanel CornerRadius="10" Margin="0,0,0,0" Background="NavajoWhite" Width="220" Height="250">
                    <TextBlock x:Name="Name5" Text="英语专业八级" x:FieldModifier="Public" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Foreground="White"/>
