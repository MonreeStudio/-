<Page
    x:Class="倒计时.Details"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:倒计时"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="PowderBlue">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="2*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Name="DetailsPickedDate"
                   Text="2019/6/15"
                   FontSize="30"
                   Foreground="White"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"
                   Grid.Row="0"/>
        <TextBlock x:Name="DetailsEvent"
                   Text="大学英语六级"
                   FontSize="30"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="1"/>
        <Grid  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="Azure">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock x:Name="DetailsDate"
                       Text="还有。。。"
                       FontSize="48"
                       Foreground="PowderBlue"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
        <TextBlock Text="——夏日——" Margin="10" Grid.Row="5" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White">
            
        </TextBlock>
    </Grid>
</Page>
